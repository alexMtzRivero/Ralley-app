<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:layout_margin="32dp">
    <LinearLayout
        android:id="@+id/title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:weightSum="5"
        android:padding="16dp"
        android:layout_weight="15">
        <ImageView
            android:src="@drawable/logo_appli"
            android:layout_width="1dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="1dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="right"
            android:weightSum="6"
            android:layout_height="match_parent">
            <View
                android:layout_width="200dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="@color/appYellow">

            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:text="Rallye GGCD"
                android:textStyle="bold"
                android:textSize="32sp"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:textAlignment="textEnd"
                android:textSize="20sp"
                android:text="Grenoble 2019"
                android:layout_weight="2"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:weightSum="3"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_weight="75">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/homeMapBtn"
                android:src="@drawable/ic_carte"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:background="@color/backgroundColor"
                android:layout_margin="16dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/homeScanBtn"
                android:src="@drawable/ic_scan"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:background="@color/backgroundColor"
                android:layout_margin="16dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/homeProgressBtn"
                android:src="@drawable/ic_coureur"
                android:layout_width="1dp"
                android:padding="16dp"
                android:layout_weight="1"
                android:background="@color/backgroundColor"
                android:layout_margin="16dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/homeQuizzBtn"
                android:src="@drawable/ic_question"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:background="@color/backgroundColor"
                android:layout_margin="16dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/homeCallBtn"
                android:src="@drawable/ic_contact"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:background="@color/backgroundColor"
                android:layout_margin="16dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/homeWebBtn"
                android:src="@drawable/ic_site"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:background="@color/backgroundColor"
                android:layout_margin="16dp"
                android:layout_height="match_parent" />
        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:id="@+id/data"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:weightSum="5"
        android:gravity="center"
        android:layout_weight="10">
        <ImageView
            android:src="@drawable/ic_regles"
            android:layout_width="64dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="Télécharger les règles"/>
    </LinearLayout>

</LinearLayout>